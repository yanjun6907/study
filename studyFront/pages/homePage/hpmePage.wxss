

  page{
    height: 100%;
  }  
  .container{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    position: relative;
  }
  .image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -100;
  }
  .main {
    position: relative;
    padding: 15rpx;
    z-index: 1;
  }
  .mainTop {
      width: 100%;
      display: flex;
  }
  .titleInfo {
    flex:1; 
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    width: 350rpx;
    height: 140rpx;
    border: 1px solid #fff;
    background-color: rgba(255, 255, 255, 0.6);
    border-radius: 10rpx;
  }
  .titleImage { 
    margin: 15rpx;
    width: 100rpx;
    height: 100rpx;
    border: 1px solid #fff;
    border-radius: 50%;
  }
  .user {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 100rpx;
  }
  .userName {
      font-size: 32rpx;
      font-weight: 550;
  }
  .beans {
      font-size: 25rpx;
  }
  .titleRight {
      flex:1;
      display: flex;
      flex-flow: row;
      align-items: center;
      justify-content: flex-end;      
  }
  .Announcement {
      position: relative;
      margin-right: 20rpx;
      width: 130rpx;
      height: 100rpx;
      border: 1px solid #fff;
      border-radius: 15rpx;
      background-color: #ff8282;
  }
  .Sgin {
    position: relative;
    margin-right: 5rpx;
    width: 130rpx;
    height: 100rpx;
    border: 1px solid #fff;
    border-radius: 15rpx;
    background-color: #2974ff;
  }
  .image3 {
      width: 70rpx;
      height: 60rpx;
  }
  .cement {
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 28rpx;
  }
  .round {
      position: absolute;
      top: 10rpx;
      right: 10rpx;
      width: 15rpx;
      height: 15rpx;
      border: 1px solid #fff;
      border-radius: 50%;
      background-color: red;
  }
  .mainCenter {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 50%;
      height: 500rpx;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,50%);
  }
  .mainCenter button {
      width: 100%;
      border: 1.5px solid #fff;
  }
  .text {
    margin: 10rpx;
    width: 100%;
    font-size: 25rpx;
    color: #000;
    text-align: left;
  }
  .textCont {
    text-align: left;
  }
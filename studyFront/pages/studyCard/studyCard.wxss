.main {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.phone {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  font-size: 32rpx;
  border-top:1px solid rgb(231, 231, 231);
  border-bottom:1px solid rgb(230, 230, 230);
  position: relative;
}
.top {
  display: flex;
  align-items: center;
  margin: 40rpx 40rpx 20rpx;
  height: 300rpx;
  font-size: 32rpx;
  border:1px solid rgb(230, 230, 230);
  position: relative;
}
.goInfo {
  position: absolute;
  right: 15rpx;
  top: 5rpx;
  font-size: 25rpx;
  color: #00aeff;
}
.titleInfo {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
  height: 300rpx;
  /* border: 1px solid rgb(138, 138, 138); */
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 10rpx;
}
.titleImage { 
  margin: 30rpx 50rpx;
  width: 200rpx;
  height: 200rpx;
  border: 1px solid rgb(230, 230, 230);
  border-radius: 50%;
}
.user {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
}
.userName {
    font-size: 32rpx;
}
.btn {
  position: fixed;
  left: 5%;
  bottom: 40rpx;
  width: 90%;
  color: #fff;
  background-color: #00aeff;
} 